# Enhanced Marketing Campaign Form Builder Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (MySQL)
# Set SKIP_DATABASE=true to use in-memory storage instead
SKIP_DATABASE=false
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=marketing_campaign_advanced

# For production, create a dedicated database user:
# DB_USER=marketing_user
# DB_PASSWORD=your_secure_password

# Authentication Secrets
# IMPORTANT: Change these in production!
JWT_SECRET=your-jwt-secret-change-in-production-make-it-long-and-random
SESSION_SECRET=your-session-secret-change-in-production

# Security Settings
BCRYPT_ROUNDS=10
TOKEN_EXPIRY=24h

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Features Toggle
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Database Pool Settings
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Backup Settings
AUTO_BACKUP=true
BACKUP_INTERVAL=24 